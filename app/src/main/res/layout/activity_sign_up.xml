<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/program14_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <ImageButton
        android:id="@+id/backBtnSignUp"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_margin="25dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/signupTitle"
        android:layout_margin="15dp"
        android:text="Sign - Up"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/username"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupTitle"
        android:hint="Enter Username"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:hint="Enter Password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:hint="Enter Email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/phone"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:hint="Enter Phone Number"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_smartphone_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/course"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:hint="Enter Course"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_laptop_chromebook_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/gender"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course"
        android:hint="Enter Gender"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_manage_accounts_24"
        android:drawablePadding="20dp"/>

    <EditText
        android:id="@+id/age"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gender"
        android:hint="Enter Age"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/baseline_numbers_24"
        android:drawablePadding="20dp"/>

    <Button
        android:id="@+id/Signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign - Up"
        android:textSize="20dp"
        android:layout_below="@+id/age"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:backgroundTint="#748cab"/>

</RelativeLayout>